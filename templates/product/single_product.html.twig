<div class="product-item text-center">
    <a href="{{ path('product', {'slug' : product.slug}) }}">
        <div class="product-img d-flex flex-wrap align-items-center">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.subtitle }}" class="img-fluid align-middle">
        </div>
    </a>
    <h5>{{ product.name }}</h5>
    <span class="product-subtitle">{{ product.subtitle }}</span>
    <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
</div>
