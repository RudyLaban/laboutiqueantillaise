{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - La Boutique Antillaise{% endblock %}

{% block content %}
    <div class="block-custom block-small">

        {% for message in app.flashes('notice') %}
            <div class="alert alert-primary">{{ message }}</div>
        {% endfor %}

        <form method="post">

            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre email" required autofocus>
            </div>
            <button class="btn btn-lg btn-info btn-block" type="submit">
                Valider
            </button>
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('register') }}">vous connecter</a> ?</p>
        </form>
    </div>
{% endblock %}
